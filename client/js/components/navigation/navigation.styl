.sl-navigation-bar
  display flex
  justify-content space-between
  width 100%
  top 0px
  left 0px
  height 50px
  background #6b6a6a
  color white
  z-index 999
.sl-brand
  width 70px
  padding 0.5em
  display flex
  justify-content center
  align-items center
  border-right 1px solid #e6e6e6
  .logo
    color white
    font-size 1.5em
  .logo:hover
    color #e6e6e6
    text-decoration none
  .logo:focus
    color #e6e6e6
    text-decoration none
.sl-navigation-menu
  display flex
  justify-content flex-start
  flex 1
  min-width 50%
  nav
    margin-left 0px
    display flex
    li.sl-navigation-item
      display flex
      justify-content center
      align-items center
      font-size 1.1em
      border-right 1px solid #e6e6e6
      a
        color white
        padding 15px
      a:hover
        color #e6e6e6
        text-decoration none
        border none
      a:focus
        color #e6e6e6
        text-decoration none
