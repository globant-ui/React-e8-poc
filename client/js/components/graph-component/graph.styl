div
    .tooltip
        position: absolute;			
        text-align: center;			
        width: 150px;					
        height: 50px;					
        padding: 2px;				
        font: 12px sans-serif;		
        background: lightsteelblue;	
        border: 0px;		
        border-radius: 8px;			
        pointer-events: none;
.d3-tip
    line-height: 1;
    font-weight: bold;
    min-width: 100px;
    padding: 12px;
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    border-radius: 2px;
    strong
        color: red;
